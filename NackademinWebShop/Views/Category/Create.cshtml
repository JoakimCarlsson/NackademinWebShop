@model NackademinWebShop.ViewModels.Admin.Category.AdminCategoryCreateViewModel

@{
    ViewData["Title"] = "Create New Category";
    Layout = "_AdministrationLayout";

}

<div class="col-lg-12">
    <div class="card">
        <div class="card-header d-flex align-items-center">
            <h3 class="h4">Edit</h3>
        </div>
        <div class="card-body">
            <form method="post" asp-controller="Category" asp-action="Create">
                <div class="form-group">
                    <label asp-for="Name">Name</label>
                    <input class="form-control" asp-for="Name">
                    <span asp-validation-for="Name" class="text-danger validation-summary-errors"></span>
                </div>
                <button type="submit" class="btn btn-primary">Save</button>
            </form>
        </div>
    </div>
</div>