@using NackademinWebShop.Controllers
@model NackademinWebShop.ViewModels.Products.ProductDetailViewModel
@{
    ViewData["Title"] = "Product";
    ViewBag.Breadcrumbs = new List<BreadcrumbViewModel>()
    {
        new("Home", nameof(HomeController.Index), "Home", true),
        new(@Model.Category.Name, nameof(CategoryController.Index), "Category", true, @Model.Category.Id),
        new(@Model.Name, nameof(ProductController.Detail), "Product", false)
    };
}

<div class="row mb-5">
    <div class="col-lg-6">
        <div class="col-sm-10 order-1 order-sm-2">
            <img class="img-fluid" src="~/img/@Model.ProductPicture" alt="...">
        </div>
    </div>
    <div class="col-lg-6">
        <h1>@Model.Name</h1>
        <p class="text-muted lead">@Model.Price KR</p>
        <p class="text-small mb-4">@Model.Description</p>
    </div>
</div>