@model NackademinWebShop.ViewModels.Admin.User.AdminUserListViewModel

@{
    ViewBag.Title = "Users";
    Layout = "_AdministrationLayout";
}

<div class="col-lg-12">
    <div class="card">
        <div class="card-header d-flex align-items-center">
            <h3 class="h4">Products</h3>
        </div>
        <div class="card-body">
            <a asp-controller="User" asp-action="Register" class="btn btn-primary" role="button" aria-pressed="true">Create</a><br /><br />
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Email</th>
                            <th>Email Confirmed</th>
                            @*<th></th>
        <th></th>*@
                        </tr>
                    </thead>
                    <tbody>
                    @foreach (var product in @Model.Users)
                    {
                        <tr>
                            <th scope="row">@product.Email</th>
                            <th scope="row">@product.EmailConfirmed</th>
                            @*<td><a asp-controller="User" asp-action="Edit" asp-route-Id="@product.Id" class="btn btn-primary" role="button" aria-pressed="true">Edit</a></td>
        <td><a asp-controller="User" asp-action="Delete" asp-route-Id="@product.Id" class="btn btn-danger" role="button" aria-pressed="true">Delete</a></td>*@
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>