@model NackademinWebShop.ViewModels.Admin.User.AdminUserEditViewModel

@{
    ViewBag.Title = "Users";
    Layout = "_AdministrationLayout";
}

<div class="col-lg-12">
    <div class="card">
        <div class="card-header d-flex align-items-center">
            <h3 class="h4">Edit</h3>
        </div>
        <div class="card-body">
            <form method="post" asp-controller="User" asp-action="Edit">
                <div class="form-group">
                    <label asp-for="Email">Email</label>
                    <input class="form-control" asp-for="Email">
                    <span asp-validation-for="Email" class="field-validation-error"></span>
                </div>
                <div class="form-group">
                    <select class="form-control mb-3" size="@Model.Roles.Count" multiple aria-label="multiple select example" name="roles">
                        @foreach (var role in @Model.Roles)
                        {
                            <option value="@role">@role</option>
                        }
                    </select>
                </div>
                <button type="submit" class="btn btn-primary">Save</button>
            </form>
        </div>
    </div>
</div>
