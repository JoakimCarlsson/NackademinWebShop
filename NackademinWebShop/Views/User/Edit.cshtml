@model NackademinWebShop.ViewModels.Admin.User.AdminUserEditViewModel

@{
    ViewBag.Title = "Users";
    Layout = "_AdministrationLayout";
}

<div class="col-lg-12">
    <div class="card">
        <div class="card-header d-flex align-items-center">
            <h3 class="h4">Edit</h3>
        </div>
        <div class="card-body">
            <form method="post" asp-controller="User" asp-action="Edit">
                <div class="form-group">
                    <label asp-for="Email">Email</label>
                    <input class="form-control" asp-for="Email">
                    <span asp-validation-for="Email" class="text-danger validation-summary-errors"></span>
                </div>
                
                <div class="form-group">
                    <label asp-for="CurrentRoles">Category</label>
                    <select class="form-control mb-3" asp-for="CurrentRoles" asp-items="Model.AllRoles"></select>
                    <span asp-validation-for="CurrentRoles" class="text-danger validation-summary-errors"></span>
                </div>

                <button type="submit" class="btn btn-primary">Save</button>
            </form>
        </div>
    </div>
</div>
