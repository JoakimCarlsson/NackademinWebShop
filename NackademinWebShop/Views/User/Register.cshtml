@model NackademinWebShop.ViewModels.Admin.User.AdminUserRegisterViewModel

@{
    ViewBag.Title = "Users";
    Layout = "_AdministrationLayout";
}

<div class="col-lg-12">
    <div class="card">
        <div class="card-header d-flex align-items-center">
            <h3 class="h4">Edit</h3>
        </div>
        <div class="card-body">
            <div asp-validation-summary = "ModelOnly"></div> 
            <form method="post" asp-controller="User" asp-action="Register">
                <div class="form-group">
                    <label asp-for="Email">Email</label>
                    <input class="form-control" asp-for="Email">
                    <span asp-validation-for="Email" class="field-validation-error"></span>
                </div>

                <div class="form-group">
                    <label asp-for="ConfirmEmail">Confirm Email</label>
                    <input class="form-control" asp-for="ConfirmEmail">
                    <span asp-validation-for="ConfirmEmail" class="field-validation-error"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Password">Password</label>
                    <input class="form-control" asp-for="Password">
                    <span asp-validation-for="Password" class="invalid-feedback"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ConfirmPassword">Repeat Password</label>
                    <input class="form-control" asp-for="ConfirmPassword">
                    <span asp-validation-for="ConfirmPassword" class="invalid-feedback"></span>
                </div>

                <button type="submit" class="btn btn-primary">Save</button>
            </form>
        </div>
    </div>
</div>