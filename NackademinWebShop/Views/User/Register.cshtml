@model NackademinWebShop.ViewModels.Admin.User.AdminUserRegisterViewModel

@{
    ViewBag.Title = "Users";
    Layout = "_AdministrationLayout";
}

<div class="col-lg-12">
    <div class="card">
        <div class="card-header d-flex align-items-center">
            <h3 class="h4">Edit</h3>
        </div>
        <div class="card-body">
            <div asp-validation-summary="ModelOnly"></div>
            <form method="post" asp-controller="User" asp-action="Register">
                <div class="form-group">
                    <label asp-for="Email">Email</label>
                    <input class="form-control" asp-for="Email">
                    <span asp-validation-for="Email" class="text-danger validation-summary-errors"></span>
                </div>

                <div class="form-group">
                    <label asp-for="ConfirmEmail">Confirm Email</label>
                    <input class="form-control" asp-for="ConfirmEmail">
                    <span asp-validation-for="ConfirmEmail" class="text-danger validation-summary-errors"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Password">Password</label>
                    <input class="form-control" asp-for="Password">
                    <span asp-validation-for="Password" class="text-danger validation-summary-errors"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ConfirmPassword">Repeat Password</label>
                    <input class="form-control" asp-for="ConfirmPassword">
                    <span asp-validation-for="ConfirmPassword" class="text-danger validation-summary-errors"></span>
                </div>

                <div class="form-group">
                    <select class="form-control mb-3" size="@Model.Roles.Count" multiple aria-label="multiple select example" name="roles">
                        @foreach (var role in @Model.Roles)
                        {
                            <option value="@role">@role</option>
                        }
                    </select>
                    <span asp-validation-for="Roles" class="text-danger validation-summary-errors"></span>
                </div>
                <button type="submit" class="btn btn-primary">Save</button>
            </form>
        </div>
    </div>
</div>